    		}
    		//layerEditorSelectObjects $layers[0];
    		
    		$i++;
        }
     }
	

    updateLayerViewer;
    // Will crash!
	//toggleAutoLoad $gModelPanel true;		

}



global proc updateLayerViewer ()
