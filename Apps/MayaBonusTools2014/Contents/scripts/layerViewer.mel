		string $cameras[] = `ls -cameras "layerViewerCamera*"`;
		if (`size $cameras` == 0){
			$gLayerViewerCamera = `camera -n "layerViewerCamera"`;
			hide $gLayerViewerCamera;
		} else {
			$gLayerViewerCamera[0] = $cameras[0];
		}
